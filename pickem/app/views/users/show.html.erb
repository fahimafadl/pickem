<p id="notice"><%= notice %></p>
<h2><%= @user.name %>'s Statuses</h2>
<p>Email: <%= @user.email %></p>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.statuses.each do |status| %>
      <tr>
        <td><%= status.text %></td>
        <% if @user == current_user %>
          <td><%= link_to 'Edit', edit_status_path(status.id) %></td>
          <td><%= link_to 'Destroy', delete_status_path(status.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @user == current_user %>
  <%= link_to 'New Status', new_status_path %> |
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
