<h1 id="log_in">Log In</h1>
<%= form_tag('/login') do %>
  <% if session[:errors] %>
    <p style="color:red">Invalid username/password combination.</p>
  <% end %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="action">
    <%= submit_tag 'Log in' %>
  </div>
<% end %>